@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()


        <ul class="nav ace-nav">

            <li class="light-yellow">
                <a data-toggle="dropdown" class="dropdown-toggle">
                    <img class="nav-user-photo" src='@Url.Content("https://graph.facebook.com/" + @User.Identity.GetUserName() + "/picture?type=large")' alt=@User.Identity.GetUserName() />
                    <span class="user-info">

                        @User.Identity.GetUserName()
                    </span>

                    <i class="icon-caret-down browndirt"></i>
                </a>


                <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                    <li>
                        <a href="#">
                            <i class="icon-cog"></i>
                            Settings
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Dashboard", "Profile")">
                            <i class="icon-user"></i>
                            Profile
                        </a>
                    </li>

                    <li class="divider"></li>

                    <li class="logout">
                        <a href="#">
                            <i class="icon-off"></i>
                            Logout
                        </a>
                    </li>
                </ul>

            </li>
        </ul>
    }


    @Scripts.Render("~/bundles/header")


}
else
{

    <ul class="nav navbar-nav navbar-right col-md-12  hidden-xs">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
