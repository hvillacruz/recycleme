
@Styles.Render("~/Content/bid")
@Scripts.Render("~/bundles/modernizr-custom")


<span id="ItemId" data-text="@ViewBag.ItemId"></span>
<div id="bidContainer" class="containerBid">

    <div class="col-lg-9">

        <ul class="grid effect-2" id="grid" data-bind="foreach: Items">


            <li>
                <div class="widget">

                    <div class="cover">
                        <a data-bind="attr: { 'href': '@Url.Action("Exchange", "Profile")/' + Id }">
                            <img src="~/Content/Assets/images/avatar.jpg" />
                        </a>
                    </div>
                    <img data-bind="attr:{src: Buyer.Avatar},click: $root.SelectedUser.bind($data, $parent)" src="~/Content/Assets/images/avatar.jpg" class="userList" />
                    <h5><span data-bind="text:Buyer.FirstName"></span></h5>
                  
                    <div class="commentBid"></div>

                </div>

            </li>

           
        </ul>

    </div>
    <div class="col-lg-3 ad-top">
        @Html.Partial("_AdPartial")
    </div>
</div>
@Scripts.Render("~/bundles/bid")


