<link href="~/Content/Styles/Profile/Exchange.css" rel="stylesheet" />
<link href="~/Content/Chart.css" rel="stylesheet" />
<div id="panelContainer" class="container">
    <div class="col-xs-3">
        <div class="itemSelected">
            <div class="widget">
                <!-- ko foreach:ItemImages  -->
                <!-- ko if: $index() < 1 -->
                <div class="cover">
                    <img data-bind="attr:{src: Path}" src="~/Content/Assets/images/userBg.jpg" />
                </div>
                <!-- /ko -->
                <!-- /ko -->
                <h1><span data-bind="text: Name">Manuel Henry</span></h1>

                <img data-bind="attr:{src: Owner.Avatar}" src="~/Content/Assets/images/avatar.jpg" class="userList" />


                <div class="stat-stat">
                    <div class="col-xs-4 box-stat box-stat-first center radius-round-bottom"><i class="fa icon-2xx fa-bullseye"><span class="box-stat-icon-text">0</span></i></div>
                    <div class="col-xs-4 box-stat center radius-round-bottom"><i class="fa icon-2xx fa-comments"><span class="box-stat-icon-text" @*data-bind="text:UserCommenter.length"*@>0</span></i></div>
                    <div class="col-xs-4 box-stat center radius-round-bottom " @*data-bind="click:  $parent.likeUser"*@><i class="fa icon-2xx fa-heart "><span class="box-stat-icon-text" @*data-bind="text:UserFollowerUsers.length"*@>0</span></i></div>
                </div>

            </div>
        </div>

        <div class="serviceBox">

            <div class="main">
                <div class="info">
                    <div class="view">

                        <i class="prev fa faIcon fa-chevron-left"></i>
                        <i class="next fa faIcon fa-chevron-right"></i>
                        <div class="holder">
                            <div class="slide">
                                <canvas id='day' width='150'></canvas>
                                @*<div class="stats">
                                        <h1 class="good">7.25</h1>
                                        <h2 class="good">103.0%</h2>
                                        <p>Today</p>
                                    </div>*@
                            </div>
                            <div class="slide">
                                <canvas id='week' width='150'></canvas>
                                @*<div class="stats">
                                        <h1 class="bad">7.25</h1>
                                        <h2 class="bad">20.7%</h2>
                                        <p>This Week</p>
                                    </div>*@
                            </div>
                            <div class="slide">
                                <canvas id='month' width='150'></canvas>
                                @*<div class="stats">
                                        <h1 class="bad">49.71</h1>
                                        <h2 class="bad">35.5%</h2>
                                        <p>This Month</p>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
                <canvas height='272' id='weekView'></canvas>

            </div>
        </div>
    </div>
    <div class="col-xs-9">
        <div class="widget-box widget-color-dark">
            <div class="widget-header">
                <h5 class="widget-title smaller"></h5>

                <div class="widget-toolbar">
                    <span class="badge badge-danger">Pending</span>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main padding-6">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="widget-box">
                                <div class="widget-header widget-header-small">
                                    <h5 class="widget-title lighter">Comment</h5>
                                </div>

                                <div class="widget-body">
                                    <div class="widget-main">
                                        <form class="form-search">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control search-query" placeholder="Write your comment" />
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-purple btn-sm">
                                                                <i class="ace-icon fa fa-comments icon-on-right bigger-110"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="widget-box">
                                <div class="widget-header widget-header-small">
                                    <h5 class="widget-title lighter"></h5>
                                </div>

                                <div class="widget-body">
                                    <div class="widget-main">
                                        <div class="section">

                                            <!-- Add Comment -->
                                            @*<div id="add">
                                                    <p>
                                                        2
                                                        <span>
                                                            Comments
                                                        </span>
                                                    </p>


                                                </div>*@
                                            <!-- Break line -->
                                            <!-- Comments -->
                                            <div id="comments">
                                                <div class="section">
                                                    <!-- 1-->
                                                    <img src="http://www.codepen.kamilczujowski.de/images/person1.jpg" alt="© Kamil Czujowski" />
                                                    <article>
                                                        <h1>
                                                            Jannik Paare
                                                        </h1>
                                                        <p>
                                                            Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.
                                                        </p>
                                                    </article>

                                                    <!-- 2-->
                                                    <img src="http://www.codepen.kamilczujowski.de/images/person2.jpg" alt="© Kamil Czujowski " />
                                                    <article>
                                                        <h1>
                                                            Kamil Czujowski
                                                        </h1>
                                                        <p>
                                                            Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.
                                                        </p>
                                                    </article>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-xs-6">

                        </div>
                    </div>

                </div>
            </div>


        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="align-right">
                    <div class="btn-group align-left">
                        <button class="btn btn-info btn-white">Status</button>

                        <button data-toggle="dropdown" class="btn btn-info btn-white dropdown-toggle">
                            <span class="ace-icon fa fa-caret-down icon-only"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-info dropdown-menu-right">
                            <li>
                                <a href="#">Approve</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Reject</a>
                            </li>
                        </ul>
                    </div><!-- /.btn-group -->
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Profile/Chart.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Profile/Exchange.js")" type="text/javascript"></script>
