@model RecycleMeMVC.Models.RegisterViewModel

<link rel="stylesheet" href="@Url.Content("~/Content/Assets/css/bootstrap-editable.css")" />
<link rel="stylesheet" href="@Url.Content("~/Content/Styles/Account/LoginReg.css")" />







<div class="reg-content ">

    <div class="text-center ">
        <h1 class="text-center login-padding white smaller">Sign up an account</h1>
    </div>
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="well well-lg login-shadow">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="UserName">User Name</label>
                        <span class="block input-icon input-icon-left">
                            <input type="text" id="UserName" name="UserName" class="form-control" placeholder="User Name">
                            <i class="icon-user"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.UserName)
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="Password">Password</label>
                        <span class="block input-icon input-icon-left">
                            <input type="password" id="Password" name="Password" class="form-control" placeholder="Password">
                            <i class="icon-lock"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.Password)
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="ConfirmPassword">Confirm Password</label>
                        <span class="block input-icon input-icon-left">
                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                            <i class="icon-lock"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="Email">Email</label>
                        <span class="block input-icon input-icon-left">
                            <input type="text" id="Email" name="Email" class="form-control" placeholder="Hello@email.com">
                            <i class="icon-envelope"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.Email)
                        </span>
                    </label>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="UserName">First Name</label>
                        <span class="block input-icon input-icon-left">
                            <input type="text" id="FirstName" name="FirstName" class="form-control" placeholder="First Name">
                            <i class="icon-male"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="LastName">Last Name</label>
                        <span class="block input-icon input-icon-left">
                            <input type="text" id="LastName" name="LastName" class="form-control" placeholder="Last Name">
                            <i class="icon-male"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.LastName)
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="LastName">Gender</label>
                        <span class="block input-icon input-icon-left">
                            <input type="text" id="LastName" name="Gender" class="form-control" placeholder="Gender">
                            <i class="icon-group"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.Gender)
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="block clearfix">
                        <label for="BirthDate">Birthday</label>
                        <span class="block input-icon input-icon-left">
                            <input type="text" id="BirthDate" name="BirthDate" class="form-control" placeholder="BirthDate">
                            <i class="icon-calendar"></i>
                            <span class="editable-clear-x"></span>
                            @Html.ValidationMessageFor(m => m.BirthDate)
                        </span>
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="icon-circle-arrow-right"></i>Sign up</button>



        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/init")
    @Scripts.Render("~/bundles/jqueryval")
}